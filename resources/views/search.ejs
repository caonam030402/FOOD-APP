<section>
    <div class="flex-between mt-6">
        <h1 class="search__name font-bold text-2xl">Search</h1>
        <div class="">
            <select class="font-semibold text-lg" name="sort" id="sort">
                <option class="lowest" value="">Lowest price</option>
                <option value="">Highest price</option>
            </select>
        </div>
    </div>
</section>
<section class="product__list mt-8 mb-8 grid grid-cols-4 gap-20">
    <% if(menu.length > 0) { %> 
        <% menu.forEach((menu) => { %>
            <div class="product__item cursor-pointer">
                <div>
                    <img class="product--image mx-auto mb-4" src="<%= menu.image %>" alt="">
                </div>
                <div class="product__content">
                    <div class="flex-align-ct">
                        <p class="font-bold text-xl">
                            <%= menu.name %>
                        </p>
                        <span class="text-base text-orange ml-2 font-semibold">
                            (<%= menu.size %>)
                        </span>
                    </div>
                    <div class="flex-between">
                        <div>
                            <div class="text-xs text-orange">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                            </div>
                            <div>
                                <span class="font-bold text-orange">$</span>
                                <span class="text-xl font-bold"><%= menu.price %></span>
                            </div>
                        </div>
                        <button data-pizza = "<%= JSON.stringify(menu) %> " class="add-to-cart bg-orange w-[30px] h-[30px] font-bold text-lg flex-center text-white rounded-2xl">
                            <i class="fa-sharp fa-solid fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
    <% }) %>
    <% } else{ %> 
        <div class="no__search--show text-center absolute mt-20">
            <img width="30%" class=" opacity-40" src="/img/data_search.png" alt="">
            <h1 class="font-bold text-[30px] b-[30px]">No results found</h1>
            <p class="text-lg">Please try to use the common words than</p>
        </div>
    <%} %> 
</section>