<section>
    <div class="login container mx-auto text-center max-w-md box-shadow px-[30px] py-[20px] mt-[50px]">
        <h1 class="text-5xl font-bold mb-[20px]">Register</h1>
        <!-- <p class="">Sign in with your data that you entered during your registration.</p> -->
        <form class="flex flex-col" action="/register" method="POST">

            <label class="text-left font-bold" for="">Username</label>
            <input value="<%= messages.name %> " name="username" class=" mt-2 mb-[5px] rounded-md px-3 py-3 border-gray border-[1px] outline-0 border-opacity-40" placeholder="Username" type="text">   
            <% if(messages.error) { %>
            <span class="text-orange text-sm text-left mb-[10px]"> Username <%= messages.error %></span>
            <% } %>
            

            <label class="text-left font-bold" for="">Email</label>
            <input value="<%= messages.email %>" name="email" class=" mt-2 mb-[5px] rounded-md px-3 py-3 border-gray border-[1px] outline-0 border-opacity-40" placeholder="Email" type="email">
            <% if(messages.error) { %>
                <span class="text-orange text-sm text-left mb-[10px]"> Email <%= messages.error %></span>
            <% } %>

            <label class="text-left font-bold" for="">Password</label>
            <input name="password" class=" mt-2 mb-[5px] rounded-md px-3 py-3 border-gray border-[1px] outline-0 border-opacity-40" placeholder="***************" type="password">
            <% if(messages.error) { %>
                <span class="text-orange text-sm text-left mb-[10px]">Password <%= messages.error %></span>
            <% } %>
            <button type="submit" class="font-bold btn-primary mt-[20px]">Register</button>
        </form>
        <div class="flex-center mt-4 ">
            <p class="font-medium">
                Already have an account ?
            </p>
            <a href="/login" src="" class="text-orange font-bold ml-2">Login</a>
        </div>
    </div>
    <!-- <p class="text-center text-gray text-xs mt-3">
        &copy;2022 Cao Nam Gyan Corp. All rights reserved.
    </p> -->
</section>

